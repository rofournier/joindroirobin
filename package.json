{
  "name": "joindrerobin-chat",
  "version": "1.0.0",
  "description": "Chat application with password-protected rooms",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run build:watch\" \"nodemon server.js\"",
    "build": "npm run build:css && npm run build:js",
    "build:watch": "concurrently \"npm run build:css:watch\" \"npm run build:js:watch\"",
    "build:css": "tailwindcss -i ./src/css/input.css -o ./public/css/style.css",
    "build:css:watch": "tailwindcss -i ./src/css/input.css -o ./public/css/style.css --watch",
    "build:js": "webpack --mode development",
    "build:js:watch": "webpack --mode development --watch",
    "build:prod": "tailwindcss -i ./src/css/input.css -o ./public/css/style.css --minify && webpack --mode production",
    "db:init": "node scripts/init-db.js",
    "db:reset": "node scripts/init-db.js --reset",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:drop": "npx sequelize-cli db:drop",
    "db:create": "npx sequelize-cli db:create",
    "db:reset:legacy": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npm run db:migrate && npm run db:seed"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.3",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-loader": "^10.0.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.3",
    "tailwindcss": "^3.3.5",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  },
  "keywords": [
    "chat",
    "rooms",
    "socket.io",
    "express"
  ],
  "author": "Floune",
  "license": "MIT"
}
